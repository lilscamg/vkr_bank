@model vkr_bank.Dtos.UserAuthorizeDto;

<form method="post" asp-action="SRP_Auth" asp-controller="Account">
    <div class="modal fade" id="staticBackdropAuth"
         data-backdrop="static" data-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div style="background-color: #EE6A59" class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Авторизация пользователя</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="background-color: #D9D9D9; color: black; padding-bottom: 0px" class="modal-body">
                    @*номер телефона*@
                    <div class="_input__block">
                        <label asp-for="PhoneNumber">Номер телефона</label><br />
                        <input class="phone_input" id="_auth__phone__input" placeholder="+7 (___) ___-__-__" type="text" asp-for="PhoneNumber" />
                        <span class="_input__tip" asp-validation-for="PhoneNumber"></span>
                    </div>
                    @*пароль*@
                    <div class="_input__block">
                        <label asp-for="Password">Пароль</label><br />
                        <input class="_input__text" id="_auth__password__input" type="password" asp-for="Password" maxlength="20" />
                        <span class="_input__tip" asp-validation-for="Password"></span>
                    </div>
                    @*2fa*@
                    <div id="_2fa__block" class="_input__block">
                        <label asp-for="emailCode">Код 2FA</label><br />
                        <input class="_input__text" id="_auth__2fa__input" type="number" maxlength="6" minlength="6" min="0" max="999999"/>
                        <span class="_input__tip" asp-validation-for="emailCode"></span>
                    </div>
                    @*скрытые поля для srp*@
                    <input id="_srp__a__auth" type="hidden" value="" />
                    <input id="_srp__salt__auth" type="hidden" value="" />
                    <input id="_srp__B__auth" type="hidden" value="" />
                    <input id="_srp__u__auth" type="hidden" value="" />
                    <input id="_srp__A__auth" type="hidden" value="" />
                    <input id="_srp__R_c__auth" type="hidden" value="" asp-for="R_c" />
                    <input id="_2fa__enc__code" type="hidden" value="" asp-for="emailCode" />
                </div>
                <div style="background-color: #D9D9D9; justify-content: center" class="modal-footer">
                    <input class="_form__send" type="submit" value="Войти" />
                </div>
            </div>
        </div>
    </div>
</form>